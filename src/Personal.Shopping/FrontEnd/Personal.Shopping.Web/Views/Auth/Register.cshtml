@using Personal.Shopping.Web.Models.Auth
@model RegistrationRequestDto

<form method="post">
    <div class=" container border p-4">
        <div class="row text-center p-3">
            <h1>Criar Conta</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for=Email class="form-control" placeholder="Seu email..." />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for=Name class="form-control" placeholder="Seu nome..." />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for=PhoneNumber class="form-control" placeholder="Seu telefone..." />
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for=Password class="form-control" placeholder="Sua senha..." />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.Roles">
                    <option value="" disabled selected>--Selecione o tipo de usuário--</option>
                </select>
                <span asp-validation-for="Role" class="text-danger" />
            </div>
            <br />
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Registrar</button>
            </div>
        </div>
    </div>
</form>