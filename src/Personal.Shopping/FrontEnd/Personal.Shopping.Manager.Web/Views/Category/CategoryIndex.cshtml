@using Personal.Shopping.Manager.Web.Models.Product
@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Lista de Categorias";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0">Categorias</h3>
        <a asp-action="CategoryCreate" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Criar Categoria
        </a>
    </div>

    <div class="card-body">
        <!-- Filtros -->
        <div class="row mb-3">
            <div class="col-md-4">
                <input id="filterName" type="text" class="form-control" placeholder="Filtrar por nome..." />
            </div>
            <div class="col-md-4">
                <input id="filterCategory" type="text" class="form-control" placeholder="Filtrar por categoria..." />
            </div>
        </div>

        <!-- Tabela -->
        <table id="tblCategories" class="table table-bordered table-striped align-middle" style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">Categoria</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td class="text-center">
                            <a asp-action="CategoryEdit" asp-route-id="@item.CategoryNameId" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="javascript:void(0);" class="btn btn-sm btn-danger" onclick="confirmDelete(@item.CategoryNameId)">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal de Exclusão -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            </div>
            <div class="modal-body">
                Tem certeza que deseja excluir este produto?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" method="post">
                    <button type="submit" class="btn btn-danger">Ok</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.datatables.net/2.3.3/js/dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#tblCategories').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.5/i18n/pt-BR.json"
                },
                paging: true,
                searching: true
            });

            // Filtros customizados
            $('#filterName').on('keyup', function () {
                table.column(1).search(this.value).draw();
            });

            $('#filterCategory').on('keyup', function () {
                table.column(2).search(this.value).draw();
            });
        });
    </script>
    <script>
        function confirmDelete(id) {
            var form = document.getElementById('deleteForm');
            form.action = '/Category/CategoryDelete/' + id;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}
